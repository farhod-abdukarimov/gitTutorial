FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

lengthX 200.0;
lengthY 100.0;
h 20.0;
xf 50.0;  /*halflength fracture*/

nX 100;  //number step for x
nY 80; //number step for y
nH 1;  

nFrac #calc"2*$nX*$xf / $lengthX";
nBlockX #calc"0.5*($nX-$nFrac)";
nBlockY #calc"0.5*$nY";

stepX #calc"$lengthX / $nX";
stepY #calc"$lengthY / $nY";


vertices
(
    (#calc"-0.5*$lengthX" #calc"-0.5*$lengthY" #calc"-0.5*$h")
    (#calc"-1*$xf" #calc"-0.5*$lengthY" #calc"-0.5*$h")
    (#calc"-1*$xf" #calc"-0.5*$stepY" #calc"-0.5*$h")
    (#calc"-0.5*$lengthX" #calc"-0.5*$stepY" #calc"-0.5*$h")

    ($xf #calc"-0.5*$lengthY" #calc"-0.5*$h")
    (#calc"0.5*$lengthX" #calc"-0.5*$lengthY" #calc"-0.5*$h")
    (#calc"0.5*$lengthX" #calc"-0.5*$stepY" #calc"-0.5*$h")
    ($xf #calc"-0.5*$stepY" #calc"-0.5*$h")
    
    (#calc"$xf" #calc"0.5*$stepY" #calc"-0.5*$h")
    (#calc"0.5*$lengthX" #calc"0.5*$stepY" #calc"-0.5*$h")
    (#calc"0.5*$lengthX" #calc"0.5*$lengthY" #calc"-0.5*$h")
    ($xf #calc"0.5*$lengthY" #calc"-0.5*$h")
    
    (#calc"-0.5*$lengthX" #calc"0.5*$stepY" #calc"-0.5*$h")
    (#calc"-1*$xf" #calc"0.5*$stepY" #calc"-0.5*$h")
    (#calc"-1*$xf" #calc"0.5*$lengthY" #calc"-0.5*$h")
    (#calc"-0.5*$lengthX" #calc"0.5*$lengthY" #calc"-0.5*$h")


    (#calc"-0.5*$lengthX" #calc"-0.5*$lengthY" #calc"0.5*$h")
    (#calc"-1*$xf" #calc"-0.5*$lengthY" #calc"0.5*$h")
    (#calc"-1*$xf" #calc"-0.5*$stepY" #calc"0.5*$h")
    (#calc"-0.5*$lengthX" #calc"-0.5*$stepY" #calc"0.5*$h")

    ($xf #calc"-0.5*$lengthY" #calc"0.5*$h")
    (#calc"0.5*$lengthX" #calc"-0.5*$lengthY" #calc"0.5*$h")
    (#calc"0.5*$lengthX" #calc"-0.5*$stepY" #calc"0.5*$h")
    ($xf #calc"-0.5*$stepY" #calc"0.5*$h")
    
    (#calc"$xf" #calc"0.5*$stepY" #calc"0.5*$h")
    (#calc"0.5*$lengthX" #calc"0.5*$stepY" #calc"0.5*$h")
    (#calc"0.5*$lengthX" #calc"0.5*$lengthY" #calc"0.5*$h")
    ($xf #calc"0.5*$lengthY" #calc"0.5*$h")
    
    (#calc"-0.5*$lengthX" #calc"0.5*$stepY" #calc"0.5*$h")
    (#calc"-1*$xf" #calc"0.5*$stepY" #calc"0.5*$h")
    (#calc"-1*$xf" #calc"0.5*$lengthY" #calc"0.5*$h")
    (#calc"-0.5*$lengthX" #calc"0.5*$lengthY" #calc"0.5*$h")

);



blocks
(
    hex (0 1 2 3 16 17 18 19) ($nBlockX $nBlockY $nH) simpleGrading (1 1 1)
    hex (1 4 7 2 17 20 23 18) ($nFrac $nBlockY $nH) simpleGrading (1 1 1)
    hex (4 5 6 7 20 21 22 23) ($nBlockX $nBlockY $nH) simpleGrading (1 1 1)
    hex (3 2 13 12 19 18 29 28) ($nBlockX 1 $nH) simpleGrading (1 1 1)
    hex (2 7 8 13 18 23 24 29) ($nFrac 1 $nH) simpleGrading (1 1 1)
    hex (7 6 9 8 23 22 25 24) ($nBlockX 1 $nH) simpleGrading (1 1 1)
    hex (12 13 14 15 28 29 30 31) ($nBlockX $nBlockY $nH) simpleGrading (1 1 1)
    hex (13 8 11 14 29 24 27 30) ($nFrac $nBlockY $nH) simpleGrading (1 1 1)
    hex (8 9 10 11 24 25 26 27) ($nBlockX $nBlockY $nH) simpleGrading (1 1 1)
);

edges
(

);

boundary
(
    
    infinity
    {
        type patch;
        faces
        (
            (0 1 17 16)
            (1 4 20 17)
            (4 5 21 20)
            (5 6 22 21)
            (6 9 25 22)
            (9 10 26 25)
            (10 11 27 26)
            (11 14 30 27)
            (14 15 31 30)
            (15 12 28 31)
            (12 3 19 28)
            (3 0 16 19)    
        );
    }
    front
    {
        type empty;
        faces
        (
             (16 17 18 19)
             (17 20 23 18)
             (20 21 22 23)
             (19 18 29 28)
             (18 23 24 29)
             (23 22 25 24)
             (28 29 30 31)
             (29 24 27 30)
             (24 25 26 27) 
        );
    }

    back
    {
        type empty;
        faces
        (
             (3 2 1 0)
             (2 7 4 1)
             (7 6 4 5)
             (12 13 2 3)
             (13 8 2 7)
             (8 9 6 7)
             (15 14 13 12)
             (14 11 8 13)
             (11 10 9 8)
             
        );
    }    
);

mergePatchPairs
(
);

